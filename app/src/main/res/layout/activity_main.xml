<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.myappporfolio.MainActivity">


    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.15">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.7">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="My Nanodegree Apps!"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:paddingBottom="0dp"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Popular Movies"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:paddingTop="30dp"
                android:clickable="true"
                android:id="@+id/popular_movies"
                android:onClick="popularMoviesClicked"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Stock Hawk"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:paddingTop="30dp"
                android:id="@+id/stock_hawk"
                android:onClick="stockHawkClicked"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Build It Bigger"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:paddingTop="30dp"
                android:id="@+id/build_it_bigger"
                android:onClick="buildItBiggerClicked"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Make your app material"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:paddingTop="30dp"
                android:id="@+id/make_your_app_material"
                android:onClick="makeAppMaterialClicked"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Go Ubiquitous"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:paddingTop="30dp"
                android:id="@+id/go_ubiquitous"
                android:onClick="goUbiquitousClicked"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Capstone"
                android:id="@+id/capstone"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:paddingTop="30dp"
                android:onClick="capstoneClicked"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.15">
    </RelativeLayout>

</LinearLayout>
